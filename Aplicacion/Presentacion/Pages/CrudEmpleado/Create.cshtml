@page
@model Presentacion.Pages.CrudEmpleado.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4><b>Codigo del Empleado</b></h4>
                <label1 asp-for="Empleado.CodigoEmpleado" class="control-label"></label1>
                <input asp-for="Empleado.CodigoEmpleado" class="form-control" required/>
                <span asp-validation-for="Empleado.CodigoEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Sucursal</b></h4>
                <label1 asp-for="Empleado.Sucursal" class="control-label"></label1>
                <input asp-for="Empleado.Sucursal" class="form-control" required/>
                <span asp-validation-for="Empleado.Sucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Usuario</b></h4>
                <label1 asp-for="Empleado.Usuario" class="control-label"></label1>
                <input asp-for="Empleado.Usuario" class="form-control" required/>
                <span asp-validation-for="Empleado.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Contrase単a</b></h4>
                <label1 asp-for="Empleado.Contrase単a" class="control-label"></label1>
                <input asp-for="Empleado.Contrase単a" class="form-control" required/>
                <span asp-validation-for="Empleado.Contrase単a" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Seleccione el rol</b></h4>
                <label1 asp-for="Empleado.NombreRol" class="control-label"></label1>
                <select class="form-control">
                    <option value="0">ADMINITRADOR_COMPRAS</option>
                    <option value="1">ADMINISTRADOR_VENTA</option>
                    <option value="2">ADMINISTRADOR_SISTEMA</option>
                    <option value="3">VENDEDOR</option>
                </select>
                <span asp-validation-for="Empleado.NombreRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Nombres</b></h4>
                <label1 asp-for="Empleado.Nombres" class="control-label"></label1>
                <input asp-for="Empleado.Nombres" class="form-control" required/>
                <span asp-validation-for="Empleado.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Apellidos</b></h4>
                <label1 asp-for="Empleado.Apellidos" class="control-label"></label1>
                <input asp-for="Empleado.Apellidos" class="form-control" required/>
                <span asp-validation-for="Empleado.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4><b>Tipo de documento</b></h4>
                <label1 asp-for="Empleado.TipoDocumento" class="control-label"></label1>
                <input asp-for="Empleado.TipoDocumento" class="form-control" required/>
                <span asp-validation-for="Empleado.TipoDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <h4><b>Numero de documento</b></h4>
                <label1 asp-for="Empleado.NumeroDocumento" class="control-label"></label1>
                <input asp-for="Empleado.NumeroDocumento" class="form-control" required/>
                <span asp-validation-for="Empleado.NumeroDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index"><b>Regresar a la lista</b></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
