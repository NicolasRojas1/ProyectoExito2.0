@page
@model presentacion.Pages.CambiarContraseñaModel
@{
}
<form method="post">

    <h1>Iniciar sesión</h1>
    <img id="user" src="~/img/user1.png" width="300" height="300">
    <div class="contenedor">
        <div class="input-contenedor">

            <p>Contraseña:</p>
            <input asp-for="Password" type="password" placeholder="Contraseña" class="form-control">

        </div>
        <div class="form-group">
            <p>Ingrese de nuevo su contraseña:</p>
            <input asp-for="RepeatPassword" type="password" placeholder="Contraseña" class="form-control">
            <span class="text-danger">@Model.MensajePassword</span>
        </div>
        <div class="form-group">
            <input type="submit" value="Ingresar" class="button">
        </div>
    </div>
</form>